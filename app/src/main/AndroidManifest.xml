<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avsw.chatonbluetooth"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="26" />

	<uses-sdk minSdkVersion="6" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    
    <supports-screens 
    android:largeScreens="true" 
    android:normalScreens="true" 
    android:smallScreens="true" 
    android:resizeable="true" 
    android:anyDensity="true" />
    	
    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name">
        <activity
            android:name="com.avsw.com.flavor.chatonbluetooth.SplashActivity">
           <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
        </activity>
         <activity android:name="com.avsw.com.flavor.chatonbluetooth.BluetoothChat"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
                   </activity>
        <activity android:name="com.avsw.com.flavor.chatonbluetooth.DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name="com.google.ads.AdActivity"
            	  android:configChanges="orientation|keyboardHidden"/>
    </application>
</manifest>